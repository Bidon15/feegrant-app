generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String?
  access_token             String?
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String?
  session_state            String?
  refresh_token_expires_in Int?
  user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  githubId      String    @unique
  githubCreated DateTime
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  address       Address?
  sessions      Session[]
}

model Address {
  id                    String   @id @default(cuid())
  userId                String   @unique
  bech32                String   @unique
  isDusted              Boolean  @default(false)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  hasFeeGrant           Boolean  @default(false)
  feeAllowanceRemaining String?
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model JobLog {
  id        String   @id @default(cuid())
  jobName   String
  payload   Json
  status    String
  txHash    String?
  error     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Job {
  id           String    @id @default(cuid())
  name         String
  priority     Int       @default(0)
  data         Json?
  state        JobState  @default(created)
  retryLimit   Int       @default(2) @map("retry_limit")
  retryCount   Int       @default(0) @map("retry_count")
  retryDelay   Int       @default(0) @map("retry_delay")
  retryBackoff Boolean   @default(false) @map("retry_backoff")
  startAfter   DateTime  @default(now()) @map("start_after")
  startedOn    DateTime? @map("started_on")
  singletonKey String?   @map("singleton_key")
  singletonOn  DateTime? @map("singleton_on")
  expireIn     Int       @default(900000) @map("expire_in")
  createdOn    DateTime  @default(now()) @map("created_on")
  completedOn  DateTime? @map("completed_on")
  keepUntil    DateTime  @default(dbgenerated("(now() + '14 days'::interval)")) @map("keep_until")
  output       Json?
  deadLetter   String?   @map("dead_letter")
  policy       String?

  @@unique([name, id])
  @@index([name])
  @@index([state])
  @@index([startAfter])
}

model Archive {
  id           String    @id @default(cuid())
  name         String
  priority     Int       @default(0)
  data         Json?
  state        JobState
  retryLimit   Int       @default(2) @map("retry_limit")
  retryCount   Int       @default(0) @map("retry_count")
  retryDelay   Int       @default(0) @map("retry_delay")
  retryBackoff Boolean   @default(false) @map("retry_backoff")
  startAfter   DateTime  @map("start_after")
  startedOn    DateTime? @map("started_on")
  singletonKey String?   @map("singleton_key")
  singletonOn  DateTime? @map("singleton_on")
  expireIn     Int       @map("expire_in")
  createdOn    DateTime  @map("created_on")
  completedOn  DateTime? @map("completed_on")
  keepUntil    DateTime  @map("keep_until")
  output       Json?
  deadLetter   String?   @map("dead_letter")
  policy       String?
  archivedOn   DateTime  @default(now()) @map("archived_on")

  @@index([archivedOn])
}

model Version {
  version       Int      @id
  maintained_on DateTime @default(now())
}

enum JobState {
  created
  retry
  active
  completed
  expired
  cancelled
  failed
}
